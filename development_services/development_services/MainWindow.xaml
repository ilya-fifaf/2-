<Window x:Class="development_services.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="400" Width="400" WindowStartupLocation="CenterScreen"
        Background="#f9f9f9">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Регистрация" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Foreground="#333333"
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20" />

        <!-- Поле ввода имени -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,15">
            <TextBlock Text="Имя" 
                       FontSize="14" 
                       Margin="0,0,0,5" 
                       Foreground="#555555" />
            <Border BorderBrush="#cccccc" BorderThickness="1" CornerRadius="5">
                <TextBox Name="NameTextBox" 
                         FontSize="14" 
                         Padding="5" 
                         Background="White" />
            </Border>
        </StackPanel>

        <!-- Поле ввода пароля -->
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,15">
            <TextBlock Text="Пароль" 
                       FontSize="14" 
                       Margin="0,0,0,5" 
                       Foreground="#555555" />
            <Border BorderBrush="#cccccc" BorderThickness="1" CornerRadius="5">
                <PasswordBox Name="PasswordBox" 
                             FontSize="14" 
                             Padding="5" 
                             Background="White" />
            </Border>
        </StackPanel>

        <!-- Кнопка Зарегистрироваться -->
        <Button Grid.Row="3"
                Content="Зарегистрироваться"
                Width="180" Height="40"
                Background="#4caf50"
                Foreground="White"
                FontWeight="Bold"
                FontSize="14"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                BorderThickness="0"
                Click="RegisterButton_Click"
                Margin="0,20,0,0" />
        <Button Grid.Row="3"
                Content="Войти в аккаунт"
                Width="140" Height="35"
                Background="#4682B4"
                Foreground="White"
                FontWeight="Bold"
                FontSize="14"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                BorderThickness="0"
                Click="LoginButton_Click"
                Margin="0,70,0,0" />
    </Grid>
</Window>