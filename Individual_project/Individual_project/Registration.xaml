<Window x:Class="Individual_project.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Individual_project"
        mc:Ignorable="d"
        Title="RayC - разработка ПО" MinHeight="400" MinWidth="400">
    <Window.Resources>
        <Style x:Key="RedText" TargetType="Button">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="7"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TextBoxstyle" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="7">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="0"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="PasswordBoxstyle" TargetType="PasswordBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="7">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="0"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
      <Style x:Key="ModernDatePickerStyle" TargetType="DatePicker">
    <Setter Property="Background" Value="White"/>
    <Setter Property="BorderBrush" Value="Gray"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="2"/>
    <Setter Property="Template">
        <Setter.Value>
            <ControlTemplate TargetType="DatePicker">
                <Grid>
                    <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="7"/>
                    <DatePickerTextBox x:Name="PART_TextBox"
                                       Margin="0"
                                       Background="Transparent"
                                       BorderThickness="0"
                                       Foreground="Black"
                                       VerticalContentAlignment="Center"
                                       Padding="5,2,32,2"/>
                    <Button x:Name="PART_Button"
                            Width="32"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Stretch"
                            Focusable="False"
                            Cursor="Hand"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            Margin="0">
                        <Grid>
                            <Ellipse Width="22" Height="22" Fill="#E0E0E0" Stroke="Gray" StrokeThickness="1"/>
                            <Path Width="14" Height="14" Stretch="Uniform"
                                  Data="M3,7 H13 M8,3 V13 M5,5 H11 V11 H5 Z"
                                  Fill="Gray"/>
                        </Grid>
                    </Button>
                    <Popup x:Name="PART_Popup"
                           Placement="Bottom"
                           AllowsTransparency="True"
                           Focusable="False"
                           IsOpen="{TemplateBinding IsDropDownOpen}"
                           StaysOpen="False">
                        <Border x:Name="PART_PopupBorder"
                                SnapsToDevicePixels="True"
                                Background="White"
                                BorderBrush="Gray"
                                BorderThickness="1">
                            <Calendar x:Name="PART_Calendar"
                                      IsTodayHighlighted="True"
                                      SelectedDate="{Binding SelectedDate, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"/>
                        </Border>
                    </Popup>
                </Grid>
                <ControlTemplate.Triggers>
                    <Trigger SourceName="PART_Popup" Property="IsOpen" Value="True">
                        <Setter TargetName="Bd" Property="BorderBrush" Value="#FF7EB4EA"/>
                        <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                    </Trigger>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Foreground" Value="#FF888888"/>
                    </Trigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
        </Setter.Value>
    </Setter>
</Style>
    </Window.Resources>
    <Grid>
        
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" MinHeight="200" MinWidth="400">
            <Image Source="pack://application:,,,/logo.jpg" Height="100" Width="300"/>
            
            
            <TextBlock Text="Логин" FontSize="20" FontFamily="Arial Black" Margin="0, 20, 0, 4" MaxHeight="100" MaxWidth="200"/>
            <TextBox x:Name="login" Style="{StaticResource TextBoxstyle}" FontSize="20" MaxLength="10" VerticalContentAlignment="Center" MaxHeight="100" MaxWidth="300" MinHeight="30" MinWidth="300" />
            
            <TextBlock Text="Пароль" FontSize="20" FontFamily="Arial Black" Margin="0, 20, 0, 4" MaxHeight="100" MaxWidth="200"/>
            <PasswordBox x:Name="Pass" Style="{StaticResource PasswordBoxstyle}" VerticalContentAlignment="Center"  MaxHeight="100" MaxWidth="300" MinHeight="30" MinWidth="300" />
            
            <TextBlock Text="Дата Рождения" FontSize="20" FontFamily="Arial Black" Margin="0, 20, 0, 4" MaxHeight="100" MaxWidth="200"/>
            <DatePicker x:Name="Birthday" Style="{StaticResource ModernDatePickerStyle}"
                        Width="300" Height="35" Margin="0,8,0,0"
                        SelectedDate="{Binding ДатаРождения, Mode=TwoWay}" />
            
            <Button Content="Зарегистрироваться" Style="{StaticResource RedText}" Background="Green" MaxHeight="300" FontSize="20" MinHeight="30" MaxWidth="200" Foreground="AliceBlue" Margin="0,30,0,10" />
            <Button Content="Вход" Style="{StaticResource RedText}" Background="Blue" FontSize="20" MaxHeight="200" MinHeight="20" MaxWidth="200" Foreground="AliceBlue" Click="Login_Click"/>
        </StackPanel>
    </Grid>
</Window>